#
# WM independent hotkeys
#

# Spawn terminal.
super + Return
    alacritty

# Open program launcher.
super + space
    dmenu_run -i -p "Î»"

# Make sxhkd reload its configuration files.
super + Escape
    pkill -USR1 -x sxhkd

# Select area to screenshot to the clipboard.
super + shift + s
    /home/maxdeviant/.scripts/screenshot

# Bind right control to a left click (for playing OSRS).
Control_R
    xte 'mouseclick 1'

#
# berry hotkeys
#

super + alt + Escape
    berryc quit

super + w
    berryc window_close

super + m
    berryc window_monocle

super + f
    berryc fullscreen

super + c
    berryc window_center

super + Tab
    berryc cycle_focus

super + {h,j,k,l}
    berryc cardinal_focus {2,3,1,0}

super + shift + {h,j,k,l}
    berryc window_move {-50 0,0 50,0 -50,50 0}

super + alt + {h,l}
    berryc {snap_left,snap_right}

super + {1-9,0}
    berryc switch_workspace {0-9}

super + shift + {1-9,0}
    berryc send_to_workspace {0-9}

~button1
    berryc pointer_focus

#
# Media keys
#

XF86AudioRaiseVolume
    playerctl --player=spotify,spotifyd volume .03+

XF86AudioLowerVolume
    playerctl --player=spotify,spotifyd volume .03-

XF86AudioPlay
    playerctl --player=spotify,spotifyd play-pause

XF86AudioNext
    playerctl --player=spotify,spotifyd next

XF86AudioPrev
    playerctl --player=spotify,spotifyd previous
