#
# WM independent hotkeys
#

# Spawn terminal.
super + Return
    urxvt

# Open program launcher.
super + space
    dmenu_run -i -p "Î»"

# Make sxhkd reload its configuration files.
super + Escape
    pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# Quit bspwm.
super + alt + Escape
    bspc quit

# Close node.
super + w
    bspc node -c

# Change node state.
super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Choose the direction in which to spawn a node.
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# Cancel the current spawn direction selection.
super + ctrl + space
    bspc node -p cancel

# Change selection or move the selected node.
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# Move the selected node to the specified desktop.
super + shift + {1-9,0}
    bspc node -d '^{1-9,10}' --follow

# Select the previous or next desktop.
super + bracket{left,right}
    bspc desktop -f {prev,next}

# Select the given desktop.
super + {1-9,0}
    bspc desktop -f '^{1-9,10}'

# Bind right control to a left click (for playing OSRS).
Control_R
    xte 'mouseclick 1'

#
# Media keys
#

XF86AudioRaiseVolume
    playerctl --player=spotifyd volume .03+

XF86AudioLowerVolume
    playerctl --player=spotifyd volume .03-

XF86AudioPlay
    playerctl --player=spotifyd play-pause

XF86AudioNext
    playerctl --player=spotifyd next

XF86AudioPrev
    playerctl --player=spotifyd previous
